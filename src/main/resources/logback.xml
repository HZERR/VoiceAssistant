<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ✅ Твой пакет: уровень DEBUG -->
    <logger name="ru.hzerr" level="ALL" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- 🔇 Все остальные библиотеки: уровень WARN -->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
